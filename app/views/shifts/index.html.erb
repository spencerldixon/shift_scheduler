<h1 class="display-4 mb-4">My Shifts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Starting</th>
      <th>Ending</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.start_time.localtime.to_formatted_s(:short) %></td>
        <td><%= shift.end_time.localtime.to_formatted_s(:short) %></td>
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shift', new_shift_path %>
